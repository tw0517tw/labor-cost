{
  "private": true,
  "name": "labor-cost",
  "homepage": "http://tw0517tw.github.io/labor-cost",
  "version": "0.1.0",
  "scripts": {
    "build": "react-scripts build",
    "precommit": "lint-staged",
    "deploy": "npm run build && gh-pages -d build",
    "eject": "react-scripts eject",
    "lint": "eslint src",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom"
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-scripts": "1.1.4",
    "reactstrap": "^6.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "cross-env": "^5.1.6",
    "eslint": "^4.19.1",
    "eslint-config-yoctol": "^0.16.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.9.1",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "prettier": "^1.13.5",
    "prettier-package-json": "^1.6.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.babelrc": [
      "prettier --parser json --write",
      "git add"
    ],
    "*package.json": [
      "prettier-package-json --write",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  }
}
