{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
    "modules": true,
    "spread": true,
    "templateStrings": true,
    "jsx": true
  },
  "rules": {
    "consistent-return": [0],
    "comma-dangle": "always",
    "eol-last": [0],
    "key-spacing": [0],
    "new-cap": [0],
    "no-comma-dangle": [0],
    "no-mixed-requires": [0],
    "no-multi-spaces": [0],
    "no-shadow": [0],
    "no-unused-vars": [1],
    "no-use-before-define": [2, "nofunc"],
    "no-underscore-dangle": [0],
    "quotes": [1, "double"],
    "space-before-function-parentheses": "always",
    "no-var": [2],
    "curly": [2],

    // Stylistic
    "brace-style": [2],
    "comma-spacing": [2],
    "new-cap": [0],
    "space-infix-ops": [2],

    // React
    "react/display-name": 1,
    "react/jsx-boolean-value": 1,
    "react/jsx-quotes": 1,
    "react/jsx-no-undef": 1,
    "react/jsx-sort-props": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-multi-comp": 1,
    "react/no-unknown-property": 1,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "react/wrap-multilines": 1
  },
  "globals": {
    "process": true
  },
  "plugins": [
    "react"
  ]
}
